<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <!-- Paused Status Text (Top Right) -->
    <TextView
        android:id="@+id/pausedStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paused"
        android:textColor="#FF5722"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Job Details Container -->
    <LinearLayout
        android:id="@+id/jobDetailsContainer"
        android:layout_width="625dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pickListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Pick List - Job"
            android:textColor="#FFFF00"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mohebiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-34dp"
            android:layout_marginBottom="8dp"
            android:text="006 Mohebi Enterprises (Oman branch)"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/orderNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-84dp"
            android:layout_marginBottom="8dp"
            android:text="Order number: OM-GO20/08012"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/jobNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-124dp"
            android:text="Job number: 1024017038"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/jobNumberText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="-30dp"
            android:text=" O20 Oman - Barka"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Up/Down Arrows -->
    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/arrow_up_float"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/jobDetailsContainer"
        app:layout_constraintStart_toEndOf="@id/jobDetailsContainer"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/arrow_down_float"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/jobDetailsContainer"
        app:layout_constraintStart_toEndOf="@id/jobDetailsContainer"
        android:layout_marginStart="16dp" />

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/jobDetailsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vertical Guidelines at 33% and 66% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_section1_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_section2_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666" />

    <!-- Left Button: Menu -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTopLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:text="Menu"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_section1_end"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Middle Button: Back -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_section1_end"
        app:layout_constraintEnd_toStartOf="@id/guideline_section2_end"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Right Button: Next/Resume -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBottomRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_section2_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>