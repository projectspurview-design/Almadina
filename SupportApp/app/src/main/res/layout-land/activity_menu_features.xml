<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/menuFeaturesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu - features"
            android:textColor="#FFFF00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Feature items -->
        <TextView
            style="@style/MenuFeatureItem"
            android:text="2 – Pause" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="3 – Resume" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="4 – Back" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="5 – Next" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="6 – Cancel order" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="7 – List job" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="8 – Jump to" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="9 – Short" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="10 – Call" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="14 – Record video" />

        <TextView
            style="@style/MenuFeatureItem"
            android:text="15 – Take a picture" />

    </LinearLayout>
</ScrollView>
