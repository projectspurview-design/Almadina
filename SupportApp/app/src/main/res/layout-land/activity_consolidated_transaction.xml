<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c376a"
    android:padding="16dp">


    <Button
        android:id="@+id/btnCall"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingHorizontal="16dp"
        android:text="Call"
        android:textAllCaps="false"
        android:textColor="#0c376a"
        android:drawablePadding="8dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:icon="@drawable/back"
        app:iconTint="#0c376a"/>

    <ImageView
        android:id="@+id/ivBayantTechnology"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Bayant Technology Logo"
        android:src="@drawable/bt_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consolidated Transaction ID"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="8dp"
        android:layout_marginTop="20dp"/>

    >
    <!-- CENTER: IDs container -->
    <LinearLayout
        android:id="@+id/idsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="100dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp"
            android:layout_marginRight="48dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="vertical"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/arrowDown"
            android:nextFocusUp="@id/arrowUp" />
    </LinearLayout>



    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="#0c376a"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <!-- Right vertical arrows -->
    <LinearLayout
        android:id="@+id/arrowColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/idsContainer"
        app:layout_constraintBottom_toBottomOf="@id/idsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/arrowUp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/north_24dp_ffffff_fill0_wght400_grad0_opsz24"
            android:tint="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@null"
            android:contentDescription="Scroll up" />

        <ImageView
            android:id="@+id/arrowDown"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/south_24dp_ffffff_fill0_wght400_grad0_opsz24"
            android:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="@null"
            android:contentDescription="Scroll down" />
    </LinearLayout>

    <!-- BOTTOM row -->
    <LinearLayout
        android:id="@+id/bottomRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pill_button_background"
            android:text="Back"
            android:textColor="#0c376a"
            android:textSize="18sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:foreground="@drawable/focus_circle_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="400dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pill_button_background"
            android:text="Next"
            android:textColor="#0c376a"
            android:textSize="18sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:foreground="@drawable/focus_circle_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
