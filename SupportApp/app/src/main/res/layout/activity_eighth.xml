<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <!-- Top-left Orange Capsule Button (Call) -->
    <Button
        android:id="@+id/btnTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Call"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_orange_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom-right Orange Capsule Button (Next) -->
    <Button
        android:id="@+id/btnBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Call"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_orange_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_orange_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Job Details Container -->
    <LinearLayout
        android:id="@+id/jobDetailsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pick List - Job Title -->
        <TextView
            android:id="@+id/pickListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick List - Job"
            android:textColor="#FFFF00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Mohebi Enterprises -->
        <TextView
            android:id="@+id/mohebiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="006 Mohebi Enterprises (Oman branch)"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Order Number -->
        <TextView
            android:id="@+id/orderNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order number: OM-GO20/08012"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Job Number -->
        <TextView
            android:id="@+id/jobNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job number: 1024017038 O20 Oman - Barka"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Up Arrow -->
    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/arrow_up_float"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/jobDetailsContainer"
        app:layout_constraintStart_toEndOf="@id/jobDetailsContainer"
        android:layout_marginStart="16dp" />

    <!-- Down Arrow -->
    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/arrow_down_float"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/jobDetailsContainer"
        app:layout_constraintStart_toEndOf="@id/jobDetailsContainer"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>