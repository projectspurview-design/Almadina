<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0c376a">

    <ImageView
        android:id="@+id/ivBayantTechnology"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Bayant Technology Logo"
        android:src="@drawable/bt_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textColor="#ffffff"
        android:background="#ff4444"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/processText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Process"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/optionsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/processText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="Scroll up"
        android:focusable="true"
        android:padding="0dp"
        android:src="@drawable/north_24dp_ffffff_fill0_wght400_grad0_opsz24"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/optionsRecyclerView"
        app:layout_constraintTop_toTopOf="@id/optionsRecyclerView" />

    <ImageView
        android:id="@+id/arrowDown"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="232dp"
        android:layout_marginBottom="28dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="Scroll down"
        android:focusable="true"
        android:padding="0dp"
        android:src="@drawable/south_24dp_ffffff_fill0_wght400_grad0_opsz24"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/optionsRecyclerView"
        app:layout_constraintStart_toEndOf="@id/optionsRecyclerView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pill_button_background"
        android:text="Back"
        android:textColor="#0c376a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:foreground="@drawable/focus_circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        android:text="Next"
        android:background="@drawable/pill_button_background"
        android:textColor="#0c376a"
        android:textSize="18sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:foreground="@drawable/focus_circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>