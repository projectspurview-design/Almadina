<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bt_1"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.SupportApp">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SecondActivity" />
        <activity android:name=".FourthActivity" />
        <activity android:name=".FifthActivity" />
        <activity android:name=".SixthActivity" />
        <activity android:name=".SeventhActivity" />
        <activity android:name=".EighthActivity" />
        <activity android:name=".NinthActivity" />
        <activity android:name=".TenthActivity" />
        <activity android:name=".ConfirmationPageActivity" />
        <activity android:name=".OrderSummaryActivity" />
        <activity android:name=".NextOrderReadyActivity" />

        <!-- ADD THE FOLLOWING FOR PICKLOCATIONACTIVITY -->
        <activity
            android:name=".PickLocationActivity"
            android:screenOrientation="landscape" />
        <!--
            No need to explicitly set android:theme here if
            @style/Theme.SupportApp is appropriate and doesn't cause
            issues like a double ActionBar. If it does, we can add
            android:theme="@style/Theme.SupportApp.NoActionBar" or similar later.
        -->

    </application>

</manifest>