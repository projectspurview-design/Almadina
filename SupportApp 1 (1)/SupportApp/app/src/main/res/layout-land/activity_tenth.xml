<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F23"
    tools:context=".TenthActivity">

    <!-- Camera Preview (Initially Hidden) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Order Information Container -->
    <LinearLayout
        android:id="@+id/orderInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/skuStatusText"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp">

        <!-- Location and Quantity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A1-02-01-04"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pausedStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paused"
                    android:visibility="gone"
                    android:textColor="#FF0000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Product Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product: "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/productText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44544.872"
                android:textColor="#4DA6FF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Description Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc: "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pantene Pro V 20201..."
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Dates Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/expirationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03/07/24"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufacturing: "
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/manufacturingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/06/24"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- SKU Status Display (Right/Wrong SKU) -->
    <TextView
        android:id="@+id/skuStatusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        tools:text="Right SKU"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/menuLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Bottom Menu Buttons Layout -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/btnJumpTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="JUMP"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#FF0000"
            android:stateListAnimator="@null"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <android.widget.Button
            android:id="@+id/btnShort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SHORT"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#4DA6FF"
            android:stateListAnimator="@null"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <RelativeLayout
            android:id="@+id/scanBarcodeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_marginStart="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivScanIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginEnd="4dp"
                    app:tint="#000000" />
                <Button
                    android:id="@+id/btnScanBarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Barcode"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:focusable="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Short Quantity Input Container (Initially Hidden) - UNCHANGED -->
    <LinearLayout
        android:id="@+id/shortQuantityInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/nowat"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Short Quantity:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <NumberPicker
                android:id="@+id/npThousandsInline"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:theme="@style/NumberPickerTheme"
                android:background="@drawable/number_picker_background_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/npHundredsInline"
                android:nextFocusLeft="@+id/btnCancelShortInput"
                android:nextFocusUp="@+id/btnCancelShortInput"
                android:nextFocusDown="@+id/btnCancelShortInput"
                android:layout_marginEnd="5dp"/>

            <NumberPicker
                android:id="@+id/npHundredsInline"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:theme="@style/NumberPickerTheme"
                android:background="@drawable/number_picker_background_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/npTensInline"
                android:nextFocusLeft="@+id/npThousandsInline"
                android:nextFocusUp="@+id/btnCancelShortInput"
                android:nextFocusDown="@+id/btnCancelShortInput"
                android:layout_marginEnd="5dp"/>

            <NumberPicker
                android:id="@+id/npTensInline"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:theme="@style/NumberPickerTheme"
                android:background="@drawable/number_picker_background_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/npUnitsInline"
                android:nextFocusLeft="@+id/npHundredsInline"
                android:nextFocusUp="@+id/btnConfirmShortInput"
                android:nextFocusDown="@+id/btnConfirmShortInput"
                android:layout_marginEnd="5dp"/>

            <NumberPicker
                android:id="@+id/npUnitsInline"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:theme="@style/NumberPickerTheme"
                android:background="@drawable/number_picker_background_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/btnConfirmShortInput"
                android:nextFocusLeft="@+id/npTensInline"
                android:nextFocusUp="@+id/btnConfirmShortInput"
                android:nextFocusDown="@+id/btnConfirmShortInput"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelShortInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Back"
                android:background="#FF6B6B"
                android:textColor="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/btnConfirmShortInput"
                android:nextFocusLeft="@+id/npUnitsInline"
                android:nextFocusUp="@+id/npThousandsInline"
                android:nextFocusDown="@+id/npThousandsInline"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnConfirmShortInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Next"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/npThousandsInline"
                android:nextFocusLeft="@+id/btnCancelShortInput"
                android:nextFocusUp="@+id/npUnitsInline"
                android:nextFocusDown="@+id/npUnitsInline"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>